<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="MainTheme" parent="Theme.Material3.Light.NoActionBar">
    <item name="backgroundColor">@color/white</item>
    <item name="appBarLayoutStyle">@style/AppBarTheme</item>
    <item name="android:statusBarColor">@color/orange</item>
    <item name="floatingActionButtonStyle">@style/CustomFloatingActionButton</item>
    <item name="android:navigationBarColor">@color/orange</item>
</style>
<style name="ThemeCustomDialog" parent="Theme.AppCompat.Dialog.Alert">
    <item name="android:windowBackground">@android:color/transparent</item>
</style>
<style name="AppBarTheme" parent="Widget.Material3.AppBarLayout">
    <item name="android:background">@color/orange</item>
</style>
<style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="android:backgroundTint">@color/orange</item>
</style>
</resources>